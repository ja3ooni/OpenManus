# OpenManus Docker Environment Configuration
# Copy this file to .env and customize for your environment

# Environment
OPENMANUS_ENV=production
BUILD_TARGET=production

# Build information
BUILD_DATE=
VERSION=latest
VCS_REF=

# Ports
OPENMANUS_PORT=8000
HEALTH_PORT=8080
METRICS_PORT=9090
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443
REDIS_PORT=6379
PROMETHEUS_PORT=9091
GRAFANA_PORT=3000

# Resource limits
MEMORY_LIMIT=2G
CPU_LIMIT=1.0
MEMORY_RESERVATION=512M
CPU_RESERVATION=0.25

# LLM Configuration
OPENMANUS_LLM_API_KEY=your_api_key_here
OPENMANUS_LLM_MODEL=gpt-4
OPENMANUS_LLM_BASE_URL=https://api.openai.com/v1/

# Database (if using PostgreSQL)
POSTGRES_DB=openmanus
POSTGRES_USER=openmanus
POSTGRES_PASSWORD=secure_password_here
DATABASE_URL=postgresql://openmanus:secure_password_here@postgres:5432/openmanus

# Security
SECRET_KEY=your_secret_key_here

# Redis
REDIS_PASSWORD=redis_password_here

# Monitoring
GRAFANA_PASSWORD=admin

# Development settings (for dev environment)
MOUNT_MODE=rw
